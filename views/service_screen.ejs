<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <link rel="stylesheet" type="text/css" href="/styles/service_styles.css">
</head>
 <!-- Bootstrap JS and dependencies -->
 <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<body>

  <!-- Include Navigation -->
  <%- include('partials/topbar'); %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="mb-4">
        <img src="/images/service_appointment_banner.png" class="img-fluid" alt="Service Appointment Banner">
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6 offset-lg-3">
      <!-- Search Functionality -->
      <div class="input-group">
        <input type="text" id="searchInput" onkeyup="searchService()" class="form-control" placeholder="Search by Service Name">
        <div class="input-group-append">
          <button class="btn btn-primary" onclick="searchService()"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col-lg-6 offset-lg-3">
      <!-- Print Button with Print Icon -->
      <button onclick="printTable()" class="btn btn-primary"><i class="fa fa-print"></i> Print</button>
    </div>
  </div>

      <!-- Table of Services -->
      <div class="table-responsive">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">No</th>
              <th scope="col">Service Name</th>
              <th scope="col">Service Quantity</th>
              <th scope="col">Service Date</th>
              <th scope="col">Service Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody id="servicesTable">
            <% services.forEach(function(service, index) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= service.name %></td>
                <td><%= service.quantity %></td>
                <td><%= formatDate(service.date) %></td>
                <td>
                  <% if (service.status === 'active') { %>
                    <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-danger">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <!-- View Icon -->
                  <a href="/service_detail_screen?id=<%= service.id %>"><i class="fa fa-eye"></i></a>
                  <!-- Delete Icon -->
                  <a href="#" onclick="deleteService('<%= service.id %>')"><i class="fa fa-trash"></i></a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
  // Function to format date as DD-MM-YYYY
  function formatDate(dateString) {
    // Parse dateString to Date object
    const date = new Date(dateString.toDate());
    // Get day, month, and year components
    const day = String(date.getDate()).padStart(2, '0');
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const year = date.getFullYear();
    // Return formatted date string
    return `${day}-${month}-${year}`;
  }

  // Function to logout
  function logout() {
    // Redirect the user to the login page
    window.location.href = "/";
  }

  // Function to delete a service
  async function deleteService(serviceId) {
    try {
      const response = await fetch(`/services/${serviceId}`, {
        method: 'DELETE',
      });

      if (!response.ok) {
        throw new Error('Failed to delete service');
      }

      // Optional: Refresh the page or update the service list
      location.reload(); // Reload the page to reflect the changes
    } catch (error) {
      console.error('Error deleting service:', error);
      // Handle error: display a message to the user, etc.
    }
  }

  // Function to search services by service name
  function searchService() {
    const input = document.getElementById("searchInput");
    const filter = input.value.toUpperCase();
    const table = document.getElementById("servicesTable");
    const tr = table.getElementsByTagName("tr");

    for (let i = 0; i < tr.length; i++) {
      const td = tr[i].getElementsByTagName("td")[1];
      if (td) {
        const txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  }

  // Function to print the table
  function printTable() {
    window.print();
  }
</script>

</body>
</html>
