<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/styles/transaction_styles.css">
</head>
<body>

<div class="topnav">
  <a class="active" href="/home">Home</a>
  <a href="/services">Services</a>
  <a href="/rewards">Rewards</a>
  <a href="/items">Item</a>
  <a href="/transaction">Transaction</a>
  <a href="javascript:void(0);" onclick="logout()" class="split">Log out</a>
</div>

<div style="padding-left:16px">
  <h2>Transaction Screen</h2>
  
  <a href="/add_transaction" class="add-service-button">Add Transactions</a>

  <!-- Table of Transaction -->
  <table class="transaction-table">
    <tr>
      <th>No</th>
      <th>Receipt ID</th>
      <th>Transaction Value</th>
    </tr>
    <% transactions.forEach(function(transaction, index) { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= transaction.receiptId %></td>
        <td><%= transaction.transactionValue %></td>
        <td>
          <a href="#" onclick="deleteTransaction('<%= transaction.id %>')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </table>
</div>

<script>
  function logout() {
    // Redirect the user to the login page
    window.location.href = "/";
  }

</script>
