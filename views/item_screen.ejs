<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/styles/service_styles.css">
</head>
<body>

<div class="topnav">
  <a class="active" href="/home">Home</a>
  <a href="/services">Services</a>
  <a href="/rewards">Rewards</a>
  <a href="/items">Item</a>
  <a href="/transaction">Transaction</a>
  <a href="javascript:void(0);" onclick="logout()" class="split">Log out</a>
</div>

<div style="padding-left:16px">
  <h2>Items Screen</h2>
  
  <a href="/add_item" class="add-reward-button">Add Item</a>

  <!-- Table of Reward -->
  <table class="items-table">
    <tr>
      <th>No</th>
      <th>Item Name</th>
      <th>Item Price</th>
      <th>Item Quantity</th>
      <th>Item Date</th>
      <th>Action</th>
    </tr>
    <% items.forEach(function(item, index) { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.itemName %></td>
        <td><%= item.itemPrice %></td>
        <td><%= item.itemQuantity %></td>
        <td><%= item.itemDate %></td>
        
        <td>
          <a href="/item_detail_screen?id=<%= item.id %>">View</a>
          <a href="#" onclick="deleteItem('<%= item.id %>')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </table>
</div>

<script>
  function logout() {
    // Redirect the user to the login page
    window.location.href = "/";
  }

   // Function to delete a service
   function deleteItem(itemId) {
    // Confirm deletion with user
    if (confirm("Are you sure you want to delete this item?")) {
        // Send AJAX request to delete service
        fetch(`/items/${itemId}`, {
            method: 'DELETE'
        })
            .then(response => {
                if (response.ok) {
                    // Reload the page after successful deletion
                    window.location.reload();
                } else {
                    console.error('Failed to delete item');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
}

  async function deleteItem(itemId) {
    try {
      const response = await fetch(`/items/${itemId}`, {
        method: 'DELETE',
      });

      if (!response.ok) {
        throw new Error('Failed to delete items');
      }
      location.reload(); 
    } catch (error) {
      console.error('Error deleting item:', error);
    }
  }
</script>

</body>
</html>
